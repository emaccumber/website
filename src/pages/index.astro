---
import MainLayout from '../layouts/MainLayout.astro';
import { Image } from 'astro:assets';
import { getMediaUrl } from '../lib/mediaUrl';
---

<MainLayout 
  title="Ethan MacCumber - Photographer & Filmmaker"
  description="Photography and films by Ethan MacCumber. Explore visual storytelling through photographs and moving images."
>
  <div class="featured-image-container">
    {import.meta.env.PUBLIC_MEDIA_URL ? (
      <Image 
        src={getMediaUrl('/images/featured.jpg')}
        alt="Featured photograph"
        class="featured-image"
        width={1920}
        height={1080}
        loading="eager"
        layout="full-width"
      />
    ) : (
      <div class="placeholder-content">
        <h1 class="site-title">Ethan MacCumber</h1>
        <p class="site-subtitle">Photography & Film</p>
      </div>
    )}
  </div>
</MainLayout>

<style>
  .featured-image-container {
    position: relative;
    width: 100vw;
    height: calc(100vh - 80px);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .featured-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .placeholder-content {
    text-align: center;
    color: #333;
  }

  body.dark-mode .placeholder-content {
    color: #fff;
  }

  .site-title {
    font-size: 3rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
  }

  .site-subtitle {
    font-size: 1.2rem;
    color: #666;
    margin: 0;
  }

  body.dark-mode .site-subtitle {
    color: #aaa;
  }

  @media (max-width: 768px) {
    .featured-image-container {
      height: calc(100vh - 60px);
    }

    .site-title {
      font-size: 2rem;
    }

    .site-subtitle {
      font-size: 1rem;
    }
  }
</style>
