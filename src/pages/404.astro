---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Page Not Found - Ethan MacCumber">
  <div class="error-container">
    <h1 class="error-title">404</h1>
    <p class="error-message">Page not found</p>
    <a href="/" class="home-link">‚Üê Back to Home</a>
  </div>
</MainLayout>

<style>
  .error-container {
    text-align: center;
    padding: 4rem 2rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .error-title {
    font-size: 4rem;
    font-weight: 700;
    color: #333;
    margin: 0 0 1rem 0;
  }

  body.dark-mode .error-title {
    color: #fff;
  }

  .error-message {
    font-size: 1.2rem;
    color: #666;
    margin: 0 0 2rem 0;
  }

  body.dark-mode .error-message {
    color: #aaa;
  }

  .home-link {
    color: #666;
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.2s ease;
  }

  .home-link:hover {
    color: #333;
  }

  body.dark-mode .home-link {
    color: #aaa;
  }

  body.dark-mode .home-link:hover {
    color: #fff;
  }
</style>